                            {{else}}
                                <span class="description">邀请邮件已经发送：{{user.model.created_at}}</span>
                            {{/if}}
                    </div>
                    <aside class="user-list-item-aside">
                        <a class="user-list-action" href="#" {{action "revoke"}}>取消邀请 </a>
                        <a class="user-list-action" href="#" {{action "resend"}}>重发邮件</a>
                    </aside>
                </div>
            {{/each}}

        </section>

    {{/if}}

